<style>

.main-footer {
    background-color: var(--color-secondary);
    color: #CDCDCD; 
    padding: 60px 0 0 0; 
    font-size: 0.95rem; 
    line-height: 1.6;
}

.footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 40px; 
    padding-bottom: 40px; 
}

.footer-column {
    flex: 1; 
    min-width: 220px; 
    margin-bottom: 20px; 
}

.footer-brand {
    flex-basis: 25%; 
    min-width: 200px; 
}
.footer-logo-link {
    display: inline-block; 
    margin-top: 25px;
}
.footer-logo {
    max-height: 70px; 
    width: auto;
    display: block;
    filter: brightness(0) invert(1);
    opacity: .9;
    transition: opacity .3s ease;
}
.footer-tagline {
    font-size: 0.9rem;
    opacity: 0.8;
    max-width: 250px; 
}

.footer-links {
    flex-basis: 25%; 
}
.footer-heading {
    font-family: var(--font-title);
    font-size: 1.1rem; 
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 20px;
    padding-bottom: 8px;
    position: relative;
    display: inline-block; 
}
.footer-heading::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%; 
    max-width: 45px; 
    height: 3px;
    background-color: var(--color-primary); 
}

.footer-nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
}
.footer-nav-list li {
    margin-bottom: 10px;
}
.footer-nav-list a {
    color: #DDDDDD; 
    text-decoration: none;
    transition: color 0.3s ease;
}
.footer-nav-list a:hover,
.footer-nav-list a:focus {
    color: var(--color-white);
    text-decoration: underline;
}

.footer-contact-social {
    flex-basis: 30%; 
    min-width: 240px;
}
.footer-contact-info {
    font-style: normal;
    margin-bottom: 25px; 
}
.footer-contact-info p {
    margin-bottom: 10px;
    display: flex;
    align-items: center; 
    gap: 10px; 
}
.footer-contact-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    color: var(--color-primary); /
}
.footer-contact-info a {
    color: #DDDDDD;
    text-decoration: none;
    transition: color 0.3s ease;
    word-break: break-word; 
}
.footer-contact-info a:hover,
.footer-contact-info a:focus {
    color: var(--color-white);
    text-decoration: underline;
}

.footer-heading.social-heading {
    margin-top: 0; 
}

.social-icons-footer { 
    display: flex;
    flex-wrap: wrap; 
    gap: 18px;
    margin-top: 10px; 
}
.social-icon svg {
    width: 24px;
    height: 24px;
    fill: #B0B0B0; 
    transition: fill 0.3s ease, transform 0.3s ease;
}
.social-icon:hover svg,
.social-icon:focus svg {
    fill: var(--color-white); 
    transform: translateY(-2px); 
}

.footer-bottom {
    background-color: #25323a; 
    padding: 18px 0;
    margin-top: 0; 
    text-align: center;
    font-size: 0.85rem;
    color: #999999; 
    border-top: 1px solid #3a4a53; 
}

/* --- Responsive Adjustments --- */
@media (max-width: 992px) { 
    .footer-content {
        gap: 30px 40px; 
    }
    .footer-column {
        min-width: calc(50% - 25px); 
        flex-basis: calc(50% - 25px);
    }
    .footer-brand, .footer-contact-social {
        flex-basis: calc(50% - 25px); 
    }
}

@media (max-width: 768px) { 
    .main-footer {
        padding-top: 40px;
    }
    .footer-content {
        flex-direction: column; 
        align-items: center; 
        text-align: center;
        gap: 30px; 
        padding-bottom: 30px;
    }
    .footer-column {
        min-width: unset;
        flex-basis: auto;
        width: 100%;
        max-width: 350px; 
        margin-bottom: 0; 
        display: flex; 
        flex-direction: column;
        align-items: center;
    }
    .footer-heading::after { 
        left: 50%;
        transform: translateX(-50%);
    }
    .social-icons-footer {
        justify-content: center; 
        width: auto; 
    }
    .footer-bottom {
        padding: 15px 10px; 
        font-size: 0.8rem;
    }
}
</style>