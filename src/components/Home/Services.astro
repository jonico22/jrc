---
import { Image } from 'astro:assets';
import service01 from '../../assets/service01.webp';
import service02 from '../../assets/service02.webp';
import service03 from '../../assets/service03.webp';
---

<section id="servicios-principales" class="section main-services-section bg-light"> 
    <div class="container">
 
        <h2 class="section-title">Nuestros Servicios</h2>

        <div class="main-services-grid">

            <div class="main-service-card">
                <div class="main-service-img-container">
                    <Image src={service01} alt="Servicios de Ingeniería JRC" class="main-service-img" />
                </div>
                <div class="main-service-content">
                    <h3>INGENIERÍA</h3>
                </div>
            </div>

            <div class="main-service-card">
                <div class="main-service-img-container">
                    <Image src={service02} alt="Costos y Presupuestos JRC" class="main-service-img" />
                </div>
                <div class="main-service-content">
                    <h3>COSTOS Y PRESUPUESTOS</h3>
                </div>
            </div>

            <div class="main-service-card">
                 <div class="main-service-img-container">
                    <Image src={service03} alt="Servicios de Construcción JRC" class="main-service-img" />
                </div>
                <div class="main-service-content">
                    <h3>SERVICIOS DE CONSTRUCCIÓN</h3>
                </div>
            </div>

        </div> 
    </div> 
</section>


<style>

.main-services-section {
   background: var(--color-neutral-light);
}

.main-services-section .section-title {
    margin-bottom: 60px; 
}

.main-services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
}

.main-service-card {
    background-color: var(--color-white);
    border-radius: 10px; 
    overflow: hidden; 
    box-shadow: 0 8px 25px rgba(47, 62, 70, 0.1); 
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column; 
    text-decoration: none; 
}

.main-service-card:hover {
    transform: scale(1.03); 
    box-shadow: 0 12px 35px rgba(47, 62, 70, 0.15);
}

.main-service-img-container {
    width: 100%;
    height: 250px; 
    overflow: hidden; 
}

.main-service-img {
    width: 100%;
    height: 100%;
    object-fit: cover; 
    display: block;
    transition: transform 0.4s ease; 
}

.main-service-card:hover .main-service-img {
     transform: scale(1.1); 
}

.main-service-content {
    padding: 25px;
    text-align: center;
    background-color: var(--color-white); 
    flex-grow: 1; 
    display: flex; 
    align-items: center;
    justify-content: center;
    border-top: 1px solid #eee; 
}

.main-service-content h3 {
    font-family: var(--font-title);
    font-size: 1.2rem; 
    font-weight: 600;
    color: var(--color-secondary);
    margin: 0; 
    line-height: 1.4;
}


@media (max-width: 992px) { /* Tablet */
    .main-services-grid {
         grid-template-columns: 1fr;
        gap: 25px;
        max-width: 500px;
        margin: 0 auto; 
    }
     .main-service-img-container {
        height: 220px; 
     }
     .main-service-content h3 {
        font-size: 1.1rem;
     }
}

@media (max-width: 768px) { 
    .main-services-grid {
        grid-template-columns: 1fr; 
        gap: 25px;
        max-width: 400px; 
         margin: 0 auto;
    }
     .main-service-img-container {
        height: 200px; 
     }
      .main-service-content {
          padding: 20px;
      }
      .main-service-content h3 {
        font-size: 1.05rem;
     }
}
</style>